  <button type="submit" class="next-button">Complete Profile</button>
<% end %>

<style>
  .collaboration-options {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 30px;
  }
  
  .collab-option {
    display: block;
    position: relative;
    padding: 15px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    cursor: pointer;
  }
  
  .collab-option:hover {
    border-color: #8a2be2;
    background-color: rgba(138, 43, 226, 0.05);
  }
  
  .collab-option input {
    position: absolute;
    opacity: 0;
    height: 0;
    width: 0;
  }
  
  .checkmark {
    position: absolute;
    top: 20px;
    right: 20px;
    height: 24px;
    width: 24px;
    border: 2px solid #e5e7eb;
    border-radius: 4px;
  }
  
  .collab-option:hover .checkmark {
    border-color: #8a2be2;
  }
  
  .collab-option input:checked ~ .checkmark {
    background-color: #8a2be2;
    border-color: #8a2be2;
  }
  
  .checkmark:after {
    content: "";
    position: absolute;
    display: none;
  }
  
  .collab-option input:checked ~ .checkmark:after {
    display: block;
  }
  
  .collab-option .checkmark:after {
    left: 8px;
    top: 4px;
    width: 6px;
    height: 12px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }
  
  .option-content {
    display: flex;
    align-items: center;
    gap: 15px;
    padding-right: 40px;
  }
  
  .option-icon {
    font-size: 24px;
    min-width: 40px;
    text-align: center;
  }
  
  .option-content h3 {
    margin: 0 0 5px;
    font-size: 16px;
    font-weight: 600;
  }
  
  .option-content p {
    margin: 0;
    font-size: 14px;
    color: #6b7280;
  }
</style>
