<h1>Your Full Name</h1>

<%= form_tag onboarding_personal_info_path, method: :post do %>
  <div class="form-group">
    <label for="first_name">First Name</label>
    <input type="text" id="first_name" name="first_name" value="<%= current_user.first_name %>" placeholder="Your first name" required>
  </div>

  <div class="form-group">
    <label for="last_name">Last Name</label>
    <input type="text" id="last_name" name="last_name" value="<%= current_user.last_name %>" placeholder="Your last name" required>
  </div>
  
  <button type="submit" class="next-button">Next</button>
<% end %>
