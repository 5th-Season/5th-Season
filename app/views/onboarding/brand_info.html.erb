<h1>Tell us about your brand</h1>

<%= form_tag onboarding_brand_info_path, method: :post do %>
  <div class="form-group">
    <label for="brand_name">Brand Name</label>
    <input type="text" id="brand_name" name="brand_name" placeholder="Your brand name" required>
  </div>

  <div class="form-group">
    <label for="brand_description">Brand Description</label>
    <textarea id="brand_description" name="brand_description" rows="4" placeholder="Tell us about your brand, design philosophy, and style" required></textarea>
  </div>
  
  <button type="submit" class="next-button">Next</button>
<% end %>
